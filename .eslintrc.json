{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": ["eslint:recommended"],
    "globals": {
        "readline": "readonly",
        "printErr": "readonly"
    },
    "ignorePatterns": ["**/node_modules/**", "**/obfuscated/**", "**/dist/**"],
    "overrides": [
        {
            "files": ["*.jsx", "*.js"]
        }
    ]
}

